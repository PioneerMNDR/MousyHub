@using MousyHub.Components.Models
@using MousyHub.Components.Models.Misc
@using MousyHub.Components.Models.Model
@using MousyHub.Components.Models.Services
@using MousyHub.Components.Models.User
@using LLama.Common
@using static MousyHub.Components.Models.Misc.QuickReplySetting
@inject ProviderService Provider
@inject SettingsService Settings
@inject UploaderService Uploader
@inject TranslatorService Translator
@inject AlertServices Alert
@inject UpdaterService Updater
@inject ChatState State
<MudThemeProvider Theme="@Settings.Theme.MudTheme" IsDarkMode="true" />
